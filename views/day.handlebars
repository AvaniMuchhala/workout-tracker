<section class="day-view-card">
    <section class="day-header d-flex justify-content-between">
        <h2 class="view-label">{{format_date date}}</h2>
        <h2 class="header-font" id="daily-workout-plan">Daily Workout Plan <i class="fa-solid fa-person-running"></i></h2>
        <nav>
            <ul class="d-flex flex-column">
                <li> <a href="/calendar">Monthly View</a> </li>
                <li> <a href="/logout">Logout</a> </li>
            </ul>
        </nav>
    </section>

    <section class="day-view-body">
        <section class="workout-day-view-sections d-flex flex-row">
            <article class="todays-workout scrollable d-flex flex-column">
                <section class="day-view-cards-header">
                    <h3>Today's Workouts</h3>
                </section>
                <section class="d-flex flex-column col-10 content-wrapper">
                    <section class="content">
                        {{!-- Display Add A Workout btn if add/edit-workout-form not displayed --}}
                        {{#unless addWorkout}}
                        {{#unless updateWorkout}}
                        <button id="add-workout" class="btn btn-secondary mb-2">Add A Workout</button>
                        {{/unless}}
                        {{/unless}}

                        {{#if addWorkout}}
                        {{> add-workout-form}}
                        {{else if updateWorkout}}
                        {{> edit-workout}}
                        {{else}}
                        {{> workout-info}}
                        {{/if}}
                    </section>
                </section>
            </article>

            <section class="d-flex flex-column col-6">
                <article class="previous-workout d-flex flex-column">
                    <section class="day-view-cards-header">
                        <h3>Previous Workouts</h3>
                    </section>
                    <canvas id="myChart" style="width:100%; max-width:800px; margin:0 auto;"></canvas>

                </article>

                <article class="exercises-info d-flex flex-column">
                    <section class="day-view-cards-header">
                        <h3><i>Need a workout idea?</i></h3>
                    </section>
                    <form id="suggested-workout-options">
                        <label for="type">Select workout type:</label>
                        <select name="type" id="type">
                            <option value="cardio">Cardio</option>
                            <option value="plyometrics">Plyometrics</option>
                            <option value="powerlifting">Powerlifting</option>
                            <option value="strength">Strength</option>
                            <option value="stretching">Stretching</option>
                        </select>
                        <button class="generate btn btn-secondary mb-2">Submit</button>
                    </form>

                    <section class="populated-data hide">
                        <h3>Suggested <span id="exercise-type"></span> Workout:</h3>
                        <h4>Exercise Name:</h4>
                        <p id="exercise-name"></p>
                        <h4>Exercise Difficulty:</h4>
                        <p id="exercise-difficulty"></p>
                        <h4>Exercise Equipment:</h4>
                        <p id="exercise-equipment"></p>
                        <h4>Exercise Instructions:</h4>
                        <p id="exercise-instructions"></p>
                        <button class="clear btn btn-danger mb-2">Clear</button>
                    </section>
                </article>
            </section>
        </section>
    </section>
</section>

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
<script src="https://cdn.jsdelivr.net/npm/dayjs@1.11.3/dayjs.min.js"
