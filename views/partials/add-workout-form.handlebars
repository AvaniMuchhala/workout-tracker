{{!-- Form to populate fields of Workout Model --}}
<section class="col-12 mx-auto ">
    <section class="card rounded-0">
        <section class="card-header d-flex justify-content-between rounded-0">
            <p class="mb-0"><b>Add Workout</b></p>
            <i class="bi bi-x-square"></i>
        </section>

        <section class="card-body rounded-0">
            <form class="d-flex flex-column">

                {{!-- Select workout category --}}
                <section class="d-flex flex-column">
                    <label for="category">Select workout category: <span style="color:red">*</span></label>
                    <select name="category" id="category" required>
                        <option value="cardio">Cardio</option>
                        <option value="strength">Strength Training</option>
                        <option value="yoga">Yoga/Pilates</option>
                        <option value="recovery">Recovery/Stretching</option>
                    </select>
                </section>

                {{!-- Cardio form --}}
                <section id="cardio">
                    <section class="d-flex flex-column">
                        <label for="cardio-exercise">Exercise:</label>
                        <input type="text" id="cardio-exercise">

                        <label for="cardio-duration">Duration (minutes): <span style="color:red">*</span></label>
                        <input type="text" id="cardio-duration" required>

                        <label for="cardio-distance">Distance:</label>
                        <input type="text" id="cardio-distance">

                        <label for="cardio-notes">Notes:</label>
                        <input type="text" id="cardio-notes">
                    </section>
                </section>

                {{!-- Strength training form --}}
                <section id="strength" style="display: none">
                    <section class="d-flex flex-column">
                        <label for="strength-exercise">Exercise:</label>
                        <input type="text" id="strength-exercise">

                        <label for="strength-duration">Duration (minutes): <span style="color:red">*</span></label>
                        <input type="text" id="strength-duration">

                        <label for="sets">Sets:</label>
                        <input type="text" id="sets">

                        <label for="reps">Reps:</label>
                        <input type="text" id="reps">

                        <label for="weight">Weight &#40;lbs&#41;:</label>
                        <input type="text" id="weight">

                        <label for="strength-notes">Notes:</label>
                        <input type="text" id="strength-notes">
                    </section>
                </section>

                {{!-- Yoga/Pilates Form --}}
                <section id="yoga" style="display: none">
                    <section class="d-flex flex-column">
                        <label for="yoga-exercise">Exercise/Pose:</label>
                        <input type="text" id="yoga-exercise">

                        <label for="yoga-duration">Duration (minutes): <span style="color:red">*</span></label>
                        <input type="text" id="yoga-duration">

                        <label for="yoga-notes">Notes:</label>
                        <input type="text" id="yoga-notes">
                    </section>
                </section>

                {{!-- Recovery/Stretching Form --}}
                <section id="recovery" style="display: none">
                    <section class="d-flex flex-column">
                        <label for="recovery-exercise">Exercise:</label>
                        <input type="text" id="recovery-exercise">

                        <label for="recovery-duration">Duration (minutes): <span style="color:red">*</span></label>
                        <input type="text" id="recovery-duration">

                        <label for="recovery-notes">Notes:</label>
                        <input type="text" id="recovery-notes">
                    </section>
                </section>

                <button type="submit" class="btn btn-secondary">Complete</button>

            </form>
        </section>
    </section>
</section>

<script src="/js/add-workout-form.js"></script>